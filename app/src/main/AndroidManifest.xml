<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.QLSP"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".EditCategoryActivity"></activity>
        <activity android:name=".CategoryActivity"></activity>
        <activity android:name=".AddCategoryActivity"></activity>
        <activity android:name=".AddProductActivity"></activity>
        <activity android:name=".CategoryAdapter"></activity>
        <activity android:name=".EditProductActivity"></activity>
        <activity android:name=".ProductAdapter"></activity>
        <activity android:name=".ProductDetailActivity"></activity>
        <activity android:name=".ProductViewModel"></activity>
        <activity android:name=".CategoryDetailActivity"></activity>
        <activity android:name=".CategoryViewModel"></activity>
    </application>
    <uses-permission android:name="android.permission.INTERNET" />
</manifest>